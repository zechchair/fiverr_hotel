generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialActions"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://root:root@localhost:5432/ehotels"
}

model room {
id  Int           @id @default(autoincrement())
price Float
capacity String 
commodities String[]
vue String?
extend Boolean @default(false)
problems String[]
reserved Boolean @default(false)
}

model hotel{
  id  Int           @id @default(autoincrement())
name String
stars Int
roomsN Int
address String
phoneNumbers String[]


}